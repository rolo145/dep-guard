{
  "name": "@roland.botka/dep-guard",
  "version": "1.0.0",
  "author": "Roland Botka",
  "description": "Guardrail for safe npm dependency updates",
  "type": "module",
  "bin": {
    "dep-guard": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && chmod +x dist/index.js",
    "dev": "tsup --watch",
    "start": "node ./dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@inquirer/prompts": "8.1.0",
    "chalk": "5.6.2",
    "cli-table3": "0.6.5",
    "npm-check-updates": "19.2.1",
    "npq": "3.16.1",
    "ora": "9.0.0"
  },
  "devDependencies": {
    "@types/node": "22.10.5",
    "@vitest/coverage-v8": "4.0.17",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vitest": "^4.0.16"
  },
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rolo145/dep-guard.git"
  },
  "homepage": "https://github.com/rolo145/dep-guard",
  "bugs": {
    "url": "https://github.com/rolo145/dep-guard/issues"
  }
}
